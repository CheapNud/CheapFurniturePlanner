    <MudPaper Elevation="2" Class="pa-6">
        <MudStack Spacing="4">
            <MudText Typo="Typo.h5">Quick Actions</MudText>
            <MudGrid>
                <MudItem xs="12" sm="6" md="3">
                    <MudButton Variant="Variant.Outlined" 
