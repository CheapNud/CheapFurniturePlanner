                        <MudStack Spacing="1" AlignItems="AlignItems.Center">
                            <MudText Typo="Typo.subtitle1">Get Help</MudText>
                            <MudText Typo="Typo.caption">Learn how to use the planner</MudText>
                        </MudStack>
                    </MudButton>
